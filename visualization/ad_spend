python3 ad_spend.py --filename=../data/csv/year-2015/2015-Quarter-3.csv
printf "Year 2015 (Quarter 3): "
python3 ad_spend.py --filename=../data/csv/year-2015/2015-Quarter-4.csv
printf "\nYear 2016 (Quarter 1): "
python3 ad_spend.py --filename=../data/csv/year-2016/2016-Quarter-1.csv
printf "Year 2016 (Quarter 2): "
python3 ad_spend.py --filename=../data/csv/year-2016/2016-Quarter-2.csv
printf "Year 2016 (Quarter 3): "
python3 ad_spend.py --filename=../data/csv/year-2016/2016-Quarter-3.csv
printf "Year 2016 (Quarter 4): "
python3 ad_spend.py --filename=../data/csv/year-2016/2016-Quarter-4.csv
printf "\nYear 2017 (Quarter 1): "
python3 ad_spend.py --filename=../data/csv/year-2017/2017-Quarter-1.csv
printf "Year 2017 (Quarter 2 April): "
python3 ad_spend.py --filename=../data/csv/year-2017/2017-Quarter-2-April.csv
printf "Year 2016 (Quarter 2 May): "
python3 ad_spend.py --filename=../data/csv/year-2017/2017-Quarter-2-May.csv
printf "Year 2016 (Quarter 3): "
python3 ad_spend.py --filename=../data/csv/year-2017/2017-Quarter-3.csv
