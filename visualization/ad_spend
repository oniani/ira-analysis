python3 ad_spend.py --filename=../data/csv/by-year/year-2017.csv
printf "\nBy year (quarters)...\n"
printf "Year 2015 (Quarter 1): "
python3 ad_spend.py --filename=../data/csv/year-2015/2015-Quarter-2.csv
